      PROCEDURE Straight()
      //Five cards that follow each other.
      
      i is int
      
      FOR i = 1 TO 4
      	IF :arrGame[i]:nCardNumber <> :arrGame[i+1]:nCardNumber + 1 THEN RESULT False
      END
      
      //All the cards follow each other 
      RESULT True
