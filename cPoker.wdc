     type_code : 12
     code : |1-
      PROCEDURE RoyalStraightFlush()
      
      //The five cards must have the same color AND they must follow each other AND the flush must start with an Ace. (X10)
      
      //Same color?
      IF :Color() THEN
      	//Same color, continue
      	//An ACE?
      	IF :As() THEN
      		//There is an Ace
      		IF :Straight() THEN
      			//It is a RoyalStraightFlush
      			RESULT True
      		END
      	END
      END
      
      //It is not
      RESULT False
