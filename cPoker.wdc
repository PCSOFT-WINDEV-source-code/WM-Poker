      PROCEDURE As()
      //Does the game contains an ACE?
      
      i is int
      
      FOR i = 1 TO 5
      	IF :arrGame[i]:nCardNumber = 14 THEN RESULT True
      END
      
      //No ACE
      RESULT False
      
