      PROCEDURE StraightFlush()
      //Straight Flush: The five cards follow each other and they have the same color. (X8)
      
      //Same color?
      IF :Color() THEN
      	//Card with the same color
      	IF :Straight() THEN
      		//The cards follow each other, won
      		RESULT True
      	END
      END
      
      //Lost
      RESULT False
      
      
